{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["ESNext", "DOM"],
        "types": [],
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "docs/.vitepress/*.ts",
        "docs/.vitepress/*.d.ts",
        "docs/.vitepress/*.tsx",
        "docs/.vitepress/*.vue",
		"docs/.vitepress/config.mts"
        "docs/shims-vue.d.ts"
    ],
    "exclude": ["dist", "node_modules"]
}
